{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}